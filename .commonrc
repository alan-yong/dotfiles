# Common environment variables and aliases for both csh and tcsh

echo "Start of .commonrc"

###	IMPORTANT ENVIRONMENT VARIABLES
if ( ! ${?ALAN} ) then
    setenv ALAN "/home/alan"
endif
if ( ! ${?USR_LOCAL} ) then
    setenv USR_LOCAL "${ALAN}/local"
endif
if ( ! ${?VCO} ) then
    if ( -e ${ALAN}/bin/vco ) then
        setenv VCO `${ALAN}/bin/vco`
    else
        setenv VCO "unknown"
    endif
endif

#	SET FOR ALL SHELL
if ( ! ${?cdpath} ) then
    set cdpath = ()
endif
set cdpath_justice = ( \
	${HOME}/project/justice \
	${HOME}/project/justice/hw/tb/elib/ca_com_hw \
	)
set cdpath_ngr = ( \
	${HOME}/project/ngr \
	${HOME}/project/ngr/model \
	)
set cdpath_ocean = ( \
	${HOME}/project/ocean \
	${HOME}/project/ocean/rtl \
	${HOME}/project/ocean/rtl/test \
	${HOME}/project/ocean/rtl/tb \
	${HOME}/project/ocean/rtl/asic \
	)
set cdpath_project = ( \
	${HOME}/project \
	${cdpath_ngr} \
	${cdpath_ocean} \
	${cdpath_justice} \
	)
set local_cdpath = ( ~ )
set cdpath = ( \
	${local_cdpath} \
	${cdpath_project} \
	/u \
	)

set path = ( ${ALAN}/bin ${USR_LOCAL}/bin.${VCO} ${path} )

unset ignoreeof

###	ENVIRONMENT VARIABLES
#if ( ${?LESSOPEN} ) then
	unsetenv LESSOPEN
#	setenv LESSOPEN	"|/usr/bin/lesspipe.sh %s"
#endif
